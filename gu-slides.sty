\DeclareOption{169}{\logo{\pgfputat{\pgfxy(-0.5,6.82)}{\pgfbox[right,base]{\includegraphics[height=1.5cm]{pics/GU-logo.pdf}}} \pgfputat{\pgfxy(-0.5,0)}{\pgfbox[right,base]{\includegraphics[height=0.5cm]{pics/CLASP-grey.pdf}}}}}
